


@{
    ViewData["Title"] = "Tax Calculator";
}

<h2>Tax Calculator</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label>Enter your monthly income (₦):</label>
        <input type="number" step="0.01" name="monthlyIncome" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Calculate Tax</button>
</form>
